<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="H2sn">
        <class>cz.cvut.fit.tjv.social_network.domain.User</class>
        <class>cz.cvut.fit.tjv.social_network.domain.Post</class>
        <class>cz.cvut.fit.tjv.social_network.domain.Comment</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:sn;DB_CLOSE_DELAY=-1"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>
